@{
    ViewData["Title"] = "Add Ingredient to Recipe";
	var branchId = ViewBag.BranchId as int?;
    var menuItem = ViewBag.MenuItem as CoffeeShop.Domain.Entities.MenuItem;
    var availableIngredients = ViewBag.AvailableIngredients as IEnumerable<CoffeeShop.Domain.Entities.Ingredient>;
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Add Ingredient to Recipe - @menuItem?.Name
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" action="@Url.Action("AddIngredient")">
						<input type="hidden" name="branchId" value="@branchId" />
                        <input type="hidden" name="menuItemId" value="@ViewBag.MenuItemId" />
                        
                        <div class="mb-3">
                            <label for="ingredientId" class="form-label">
                                <i class="fas fa-leaf me-1"></i>Ingredient
                            </label>
                            <select class="form-select" id="ingredientId" name="ingredientId" required>
                                <option value="">Select an ingredient...</option>
                                @if (availableIngredients != null)
                                {
                                    @foreach (var ingredient in availableIngredients)
                                    {
                                        <option value="@ingredient.IngredientId">
                                            @ingredient.Name (@ingredient.BaseUnit)
                                        </option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="quantity" class="form-label">
                                        <i class="fas fa-weight me-1"></i>Quantity
                                    </label>
                                    <input type="number" class="form-control" id="quantity" name="quantity" 
                                           step="0.01" min="0.01" required placeholder="Enter quantity">
                                </div>
                            </div>
                         
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", new { branchId,menuItemId = ViewBag.MenuItemId })" 
                               class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Add to Recipe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Auto-fill unit based on selected ingredient
    document.getElementById('ingredientId').addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        if (selectedOption.value) {
            const text = selectedOption.text;
            const unitMatch = text.match(/\(([^)]+)\)/);
            if (unitMatch) {
                document.getElementById('unit').value = unitMatch[1];
            }
        }
    });
</script>

