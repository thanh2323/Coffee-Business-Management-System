@model IEnumerable<CoffeeShop.Domain.Entities.CafeTable>
@{
    ViewData["Title"] = "Tables";
}

<div class="container mt-4">
    <h3>Tables</h3>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create" asp-route-branchId="@ViewBag.BranchId">Add Table</a>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Table #</th>
            <th>Active</th>
            <th>QR</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TableNumber</td>
                <td>@t.IsActive</td>
                <td>
                    @if (!string.IsNullOrEmpty(t.QRCode))   
                    {
                        <div class="text-center">
                            <img src="@Url.Action("QrCode", new { tableId = t.TableId })" 
                                 alt="QR Code" 
                                 width="100" 
                                 height="100" 
                                 class="img-thumbnail" />
                            <br>
                            <small class="text-muted">QR Code Generated</small>
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <form method="post" asp-action="GenerateQr" class="d-inline">
                            <input type="hidden" name="branchId" value="@ViewBag.BranchId" />
                            <input type="hidden" name="tableId" value="@t.TableId" />
                            <button type="submit" class="btn btn-outline-secondary" title="Generate QR">
                                <i class="fas fa-qrcode"></i> QR
                            </button>
                        </form>
                        
                        <form method="post" asp-action="Delete" class="d-inline" 
                              onsubmit="return confirm('Are you sure you want to delete table @t.TableNumber?')">
                            <input type="hidden" name="tableId" value="@t.TableId" />
                            <button type="submit" class="btn btn-outline-danger" title="Delete Table">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


