@{
    ViewData["Title"] = "Create Table";
}

<div class="container mt-4">
    <h3>Create Table</h3>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <form method="post">
        <input type="hidden" name="branchId" value="@ViewBag.BranchId" />
        <div class="mb-3">
            <label class="form-label" for="tableNumber">Table Number</label>
            <input class="form-control" type="number" id="tableNumber" name="tableNumber" min="1" required />
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="submit">Create</button>
            <a class="btn btn-secondary" asp-action="Index" asp-route-branchId="@ViewBag.BranchId">Back</a>
        </div>
    </form>
</div>


