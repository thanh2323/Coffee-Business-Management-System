@{
    ViewData["Title"] = "Create Ingredient";
}

<div class="container mt-4">
    <h3>Create Ingredient</h3>
    <form method="post" asp-action="Create">
        <input type="hidden" name="branchId" value="@ViewBag.BranchId" />
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" name="name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Quantity</label>
            <input class="form-control" name="quantity" type="number" step="1" min="0" value="0" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Unit Cost</label>
            <input class="form-control" name="unitCost" type="number" step="1" min="0,01" value="0" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Package Size (e.g., 1l, 500ml, 5kg, 10pcs)</label>
            <input class="form-control" name="displayUnit" placeholder="e.g. 1l or 500ml" />
            <small class="text-muted">Used to auto-convert into the stored base unit.</small>
        </div>
        
        <button type="submit" class="btn btn-primary">Create</button>
        <a class="btn btn-secondary" asp-action="Index" asp-route-branchId="@ViewBag.BranchId">Back</a>
    </form>
 </div>


