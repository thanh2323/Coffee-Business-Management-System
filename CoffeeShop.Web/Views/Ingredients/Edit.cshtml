@model CoffeeShop.Domain.Entities.Ingredient
@{
    ViewData["Title"] = "Edit Ingredient";
}

<div class="container mt-4">
    <h3>Edit Ingredient</h3>
    <form method="post" asp-action="Edit">
        <input type="hidden" name="branchId" value="@ViewBag.BranchId" />
        <input type="hidden" name="ingredientName" value="@ViewBag.OriginalName" />
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" name="name" value="@Model.Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Quantity</label>
            <input class="form-control" name="quantity" type="number" step="0.001" min="0" value="@Model.Quantity" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Unit Cost</label>
            <input class="form-control" name="unitCost" type="number" step="0.01" min="0" value="@Model.UnitCost" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Package Size (e.g., 1l, 500ml, 5kg, 10pcs)</label>
            <input class="form-control" name="displayUnit" value="@Model.DisplayUnit" placeholder="e.g. 1l or 500ml" />
            <small class="text-muted">Used to auto-convert into the stored base unit.</small>
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-action="Index" asp-route-branchId="@ViewBag.BranchId">Back</a>
    </form>
</div>


