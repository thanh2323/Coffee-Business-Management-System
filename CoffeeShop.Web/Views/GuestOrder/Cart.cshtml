@model IEnumerable<CoffeeShop.Application.Interface.IService.CartItemWithDetails>
@{
    ViewData["Title"] = "Cart";
    var table = ViewBag.Table as CoffeeShop.Domain.Entities.CafeTable;
    var branch = ViewBag.Branch as CoffeeShop.Domain.Entities.Branch;
    var totalAmount = ViewBag.TotalAmount as decimal? ?? 0m;

}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Your Cart - Table @table?.TableNumber</h2>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MenuItemName</td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-outline-secondary btn-sm" 
                                                    onclick="updateCartItem(@item.MenuItemId, @item.Quantity - 1)">
                                                -
                                            </button>
                                            <span class="btn btn-outline-secondary btn-sm">@item.Quantity</span>
                                            <button type="button" class="btn btn-outline-secondary btn-sm" 
                                                    onclick="updateCartItem(@item.MenuItemId, @item.Quantity + 1)">
                                                +
                                            </button>
                                        </div>
                                    </td>
                                    <td>@item.TotalPrice.ToString("C")</td>
                                    <td>
                                        <button type="button" class="btn btn-danger btn-sm" 
                                                onclick="removeFromCart(@item.MenuItemId)">
                                            Remove
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3">Total</th>
                                <th>@totalAmount.ToString("C")</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", new { tableId = table?.TableId, branchId = branch?.BranchId })" 
                       class="btn btn-secondary">Continue Shopping</a>
                    <a href="@Url.Action("Checkout", new { tableId = table?.TableId, branchId = branch?.BranchId })" 
                       class="btn btn-primary">Proceed to Checkout</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <h4>Your cart is empty</h4>
                    <p>Add some items to your cart to continue.</p>
                    <a href="@Url.Action("Index", new { tableId = table?.TableId, branchId = branch?.BranchId })" 
                       class="btn btn-primary">Browse Menu</a>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function updateCartItem(menuItemId, newQuantity) {
        if (newQuantity < 0) return;
        
        fetch('@Url.Action("UpdateCart")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
            },
            body: `menuItemId=${menuItemId}&quantity=${newQuantity}&tableId=@table?.TableId&branchId=@branch?.BranchId`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            }
        });
    }

    function removeFromCart(menuItemId) {
        updateCartItem(menuItemId, 0);
    }
</script>


