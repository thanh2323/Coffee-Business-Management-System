@{
    ViewData["Title"] = "Bảng giá Page";
}

<main class="content-wrapper">
    <section class="pricing-section pricing-page-view">
        <h2 class="pricing-title">Làm chủ công việc kinh doanh của bạn với <span class="highlight-purple-strong">mức giá ưu đãi!</span></h2>

        <div class="pricing-grid">
            <div class="pricing-card">
                <h3 class="duration">1 năm</h3>
                <div class="price-details">
                    <span class="original-price">2.388.000 VNĐ</span>
                    <span class="actual-price">2.100.000 VNĐ</span>
                </div>
                <ul class="features-list-price">
                    <li><span class="check-icon-price"></span> Không giới hạn tính năng</li>
                    <li><span class="check-icon-price"></span> Tính năng mới cập nhật liên tục</li>
                </ul>
                <button class="try-free-btn try-regular">Dùng thử miễn phí</button>
            </div>

            <div class="pricing-card pricing-special">
                <span class="badge-special">Đặc biệt</span>
                <h3 class="duration">6 tháng + 6</h3>
                <div class="price-details">
                    <span class="original-price">1.194.000 VNĐ</span>
                    <span class="actual-price">588.000 VNĐ</span>
                    <p class="note-price">Mỗi khách hàng chỉ áp dụng 1 lần</p>
                </div>
                <ul class="features-list-special">
                    <li><span class="check-icon-price"></span> Tặng thêm **6 tháng** sử dụng</li>
                    <li><span class="check-icon-price"></span> Trung bình chỉ từ **49.000 VNĐ/tháng**</li>
                    <li><span class="check-icon-price"></span> Không giới hạn tính năng</li>
                    <li><span class="check-icon-price"></span> Tính năng mới cập nhật liên tục</li>
                </ul>
                <button class="try-free-btn try-special">Dùng thử miễn phí</button>
            </div>

            <div class="pricing-card">
                <h3 class="duration">2 năm</h3>
                <div class="price-details">
                    <span class="original-price">4.388.000 VNĐ</span>
                    <span class="actual-price">3.900.000 VNĐ</span>
                </div>
                <ul class="features-list-price">
                    <li><span class="check-icon-price"></span> Không giới hạn tính năng</li>
                    <li><span class="check-icon-price"></span> Tính năng mới cập nhật liên tục</li>
                </ul>
                <button class="try-free-btn try-regular">Dùng thử miễn phí</button>
            </div>
        </div>

        <p class="special-promo-note">Ưu đãi đặc biệt mừng Quốc khánh – Áp dụng cho 1000 khách hàng mua sớm nhất</p>
    </section>
</main>
