@model IEnumerable<CoffeeShop.Domain.Entities.Branch>
@{
    ViewData["Title"] = "Branches";
}

<div class="container mt-4">
    <h3>Your Branches</h3>
    <p class="text-muted">Business: <strong>@(ViewBag.BusinessName ?? "-")</strong> | Owner: <strong>@(ViewBag.OwnerName ?? "-")</strong></p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create">Add Branch</a>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Hours</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Name</td>
                <td>@(b.Address ?? "-")</td>
                <td>@b.OpenTime.ToString(@"hh\:mm") - @b.CloseTime.ToString(@"hh\:mm")</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@b.BranchId">Edit</a>
                        <form method="post" asp-action="Delete" asp-route-id="@b.BranchId" class="d-inline" onsubmit="return confirm('Delete this branch?');">
                        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


