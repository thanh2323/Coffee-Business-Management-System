@model IEnumerable<CoffeeShop.Domain.Entities.Branch>
@{
    ViewData["Title"] = "Branches";
}

<div class="container mt-4">
    <h3>Your Branches</h3>
    <p class="text-muted">Business: <strong>@(ViewBag.BusinessName ?? "-")</strong> | Owner: <strong>@(ViewBag.OwnerName ?? "-")</strong></p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create">Add Branch</a>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Hours</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Name</td>
                <td>@(b.Address ?? "-")</td>
                <td>@b.OpenTime.ToString(@"hh\:mm") - @b.CloseTime.ToString(@"hh\:mm")</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a class="btn btn-outline-primary" asp-controller="MenuItems" asp-action="Index" asp-route-branchId="@b.BranchId" title="Menu Items">
                            <i class="fas fa-utensils"></i> Menu
                        </a>
                        <a class="btn btn-outline-info" asp-controller="Tables" asp-action="Index" asp-route-branchId="@b.BranchId" title="Tables">
                            <i class="fas fa-table"></i> Tables
                        </a>
                        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@b.BranchId" title="Edit Branch">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form method="post" asp-action="Delete" asp-route-id="@b.BranchId" class="d-inline" onsubmit="return confirm('Delete this branch?');">
                            <button class="btn btn-outline-danger" type="submit" title="Delete Branch">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


