@model CoffeeShop.Domain.Entities.Branch
@{
    ViewData["Title"] = "Edit Branch";
}

<div class="container mt-4">
    <h3>Edit Branch</h3>
    <p class="text-muted">Business: <strong>@(ViewBag.BusinessName ?? "-")</strong> | Owner: <strong>@(ViewBag.OwnerName ?? "-")</strong></p>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form method="post">
        <input type="hidden" name="id" value="@Model.BranchId" />
        <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="name" value="@Model.Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label" for="address">Address</label>
            <input class="form-control" type="text" id="address" name="address" value="@Model.Address" />
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label" for="openTime">Open Time</label>
                <input class="form-control" type="time" id="openTime" name="openTime" value="@Model.OpenTime.ToString(@"hh\:mm")" required />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label" for="closeTime">Close Time</label>
                <input class="form-control" type="time" id="closeTime" name="closeTime" value="@Model.CloseTime.ToString(@"hh\:mm")" required />
            </div>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-secondary" asp-action="Index">Back</a>
            <a class="btn btn-success" asp-controller="Tables" asp-action="Create" asp-route-branchId="@Model.BranchId">
                Add Table
            </a>
        </div>
    </form>
</div>


