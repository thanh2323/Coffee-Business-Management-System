<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeeShop.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoffeeShop.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="navbar-container">

            <div class="logo">
                <div class="logo-icon"></div>
                <span>Café</span>
            </div>

            <ul class="nav-links">
                
                <li><a asp-area="" asp-controller="Home" asp-action="HowItWorks">How It Works</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Pricing">Pricing</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li>
                        <a asp-area="" asp-controller="Auth" asp-action="Profile">Profile</a>
                    </li>
                    @if (User.IsInRole("Owner"))
                    {
                        <li>
                            <a asp-area="" asp-controller="Business" asp-action="My">My Business</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    }
                }
            </ul>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="user-actions">
                    <span class="navbar-text" style="margin-right: 15px;">Welcome, @User.Identity.Name!</span>
                    <form method="post" asp-controller="Auth" asp-action="Logout" style="display: inline;">
                        <button type="submit" class="logout-button">Logout</button>
                    </form>
                </div>
            }
            else
            {
                <a asp-area="" asp-controller="Auth" asp-action="Register" class="get-started-btn">
                    Get Started <span class="arrow-icon">&rarr;</span>
                </a>
            }
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CoffeeShop.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <footer class="main-page-footer">
        <div class="footer-container">
            <div class="footer-column column-info">
                <h3 class="footer-title">Giải pháp bán hàng và thanh toán hoàn toàn mới</h3>

                <div class="social-icons">
                    <a href="#" class="social-icon facebook-icon"></a>
                    <a href="#" class="social-icon zalo-icon"></a>
                    <a href="#" class="social-icon youtube-icon"></a>
                </div>

                <h3 class="footer-title product-info-title">Thông tin sản phẩm</h3>
                <ul class="footer-links">
                    <li><a href="#">Điều khoản sử dụng</a></li>
                    <li><a href="#">Hướng dẫn sử dụng</a></li>
                    <li><a href="#">Chính sách bảo mật</a></li>
                </ul>
            </div>

            <div class="footer-column column-support">
                <h3 class="footer-title">Thông tin hỗ trợ</h3>

                <div class="support-item">
                    <span class="support-icon icon-phone"></span>
                    <p>Hỗ trợ sử dụng:<br>0934 480 344<br>support@pinpos.vn</p>
                </div>

                <div class="support-item">
                    <span class="support-icon icon-mail"></span>
                    <p>Liên hệ hợp tác:<br>doitac@pinpos.vn</p>
                </div>
            </div>

            <div class="footer-column column-contact">
                <p class="company-name">Công ty Cổ phần Công nghệ TEKO Việt Nam</p>

                <div class="office-item">
                    <span class="office-icon icon-building"></span>
                    <p class="office-title">Văn phòng của chúng tôi</p>
                </div>

                <p class="office-address">
                    <strong>Hà Nội:</strong> Tầng 8, GEMS EMPIRE TOWER, 201 Trường Chinh, P. Phương Liệt, Hà Nội
                </p>
                <p class="office-address">
                    <strong>Đà Nẵng:</strong> Tầng 3, 16 Nguyễn Văn Linh, Hải Châu, Đà Nẵng
                </p>
                <p class="office-address">
                    <strong>TP.Hồ Chí Minh:</strong> Tầng 8, Tòa Minh Long, 17 Bà Huyện Thanh Quan, P. Xuân Hòa, TP. Hồ Chí Minh
                </p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
